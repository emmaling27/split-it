    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "convex-test": "^0.0.35",
    "dotenv": "^16.4.5",
    "eslint": "^9",
    "eslint-config-next": "15.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8",
    "prettier": "3.4.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^3.0.6"
  }
